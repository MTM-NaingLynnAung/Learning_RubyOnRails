<h2>Product List</h2>

<%= link_to 'Create Product', new_product_path, class: 'btn btn-primary my-3' %>

<table class="table">
  <thead>
    <tr>
    <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
    <td><%= product.id %></td>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.price %> </td>
      <td>
      <% if product.image.present? %>
        <%= image_tag product.image_url, style: 'width:70px;height:70px;' %>
      <% else %>
        <%= image_tag 'default.png', style: 'width:70px;height:70px;' %>
      <% end %>
      </td>
      <td>
        <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-sm btn-outline-secondary' %>
        <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger'  %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= pagy_bootstrap_nav(@pagy).html_safe %>
